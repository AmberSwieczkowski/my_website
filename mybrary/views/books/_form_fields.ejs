<!-- @format -->

<div class="mybrary__form__row">
  <div class="mybrary__form__item">
    <label>Title:</label>
    <input type="text" name="title" value="<%= book.title %>" />
  </div>

  <div class="mybrary__form__item">
    <label>Author:</label>
    <select name="author">
      <% authors.forEach(author => { %> <% if (`${author.id}` ===
      `${book.author}`) { %>
      <option
        selected
        label="<%= author.name %>"
        value="<%= author.id %>"
      ></option>
      <% } else { %>
      <option
        selected
        label="<%= author.name %>"
        value="<%= author.id %>"
      ></option>
      <% } %> <% }) %>
    </select>
  </div>
</div>

<div class="mybrary__form__row">
  <div class="mybrary__form__item">
    <label>Publish Date:</label>
    <input
      type="date"
      name="publishDate"
      value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"
    />
  </div>

  <div class="mybrary__form__item">
    <label>Page Count:</label>
    <input
      type="number"
      name="pageCount"
      min="1"
      value="<%= book.pageCount %>"
    />
  </div>
</div>

<div class="mybrary__form__row">
  <div class="mybrary__form__item no__grow">
    <label>Cover:</label>
    <input type="file" name="cover" class="mybrary__book__cover filepond" />
  </div>
  <div class="mybrary__form__item">
    <label>Description:</label>
    <textarea name="description"><%= book.description %></textarea>
  </div>
</div>
