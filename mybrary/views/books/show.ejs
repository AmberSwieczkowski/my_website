<!-- @format -->

<h2 class="mybrary__page__header"><%= book.title %></h2>
<div class="mybrary__book__details">
  <div>
    <img
      class="mybrary__book__cover"
      src="<%= book.coverImagePath %> "
      alt="<%= book.title %> Cover Image"
    />
    <div class="mybrary__book__details__btn__grid">
      <a
        class="mybrary__btn mybrary__btn__primary"
        href="/books/<%= book.id %>/edit"
        >Edit</a
      >
      <%- include('../partials/deleteForm', { url: `${book.id}`}) %>
      <a
        class="mybrary__btn mybrary__btn__primary mybrary__book__details__author__btn"
        href="/authors/<%= book.author.id %>"
        >View Author</a
      >
    </div>
  </div>
  <div class="mybrary__book__details__grid">
    <div class="mybrary__book__details__label">Author:</div>
    <div><%= book.author.name %></div>
    <div class="mybrary__book__details__label">Publish Date:</div>
    <div><%= book.publishDate.toDateString() %></div>
    <div class="mybrary__book__details__label">Page Count:</div>
    <div><%= book.pageCount %></div>
    <div class="mybrary__book__details__label">Page Description:</div>
    <div><%= book.description %></div>
  </div>
</div>
