<!-- @format -->

<h2 class="mybrary__page__header">Search Authors</h2>
<form action="/authors" method="GET">
  <div class="mybrary__form__row">
    <div class="mybrary__form__item">
      <label>Name:</label>
      <input type="text" name="name" value="<%= searchOptions.name %>" />
    </div>
  </div>
  <div class="mybrary__form__row mybrary__form__row__end">
    <button class="mybrary__btn mybrary__btn__primary" type="submit">
      Search
    </button>
  </div>
</form>
<br />
<% authors.forEach(author => { %>
<div><%= author.name %></div>
<div class="mybrary__btn__row">
  <a
    class="mybrary__btn mybrary__btn__primary"
    href="/authors/<%= author.id %> "
    >View</a
  >
  <a
    class="mybrary__btn mybrary__btn__primary"
    href="/authors/<%= author.id %>/edit "
    >Edit</a
  >
  <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
</div>
<% }) %>
